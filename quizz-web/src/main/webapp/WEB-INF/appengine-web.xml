<?xml version="1.0" encoding="utf-8"?>
  <appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
  <application>${appspot.app.id}</application>
  <version>${appengine.app.version}</version>
  <threadsafe>true</threadsafe>
  <module>default</module>
  <instance-class>F4_1G</instance-class>
  <automatic-scaling>
    <min-idle-instances>0</min-idle-instances>
    <max-pending-latency>1.0s</max-pending-latency>
  </automatic-scaling>

  <system-properties>
    <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    <property name="GOOGLE_ANALYTICS_ID" value="${google.analytics.id}"/>
    <property name="AUTH_CLIENT_ID" value="${auth.client.id}"/>

    <property name="API_ADWORDS_CLIENT_ID" value="${api.adwords.clientId}"/>
    <property name="API_ADWORDS_CLIENT_SECRET" value="${api.adwords.clientSecret}"/>
    <property name="API_ADWORDS_REFRESH_TOKEN" value="${api.adwords.refreshToken}"/>
    <property name="API_ADWORDS_DEVELOPER_TOKEN" value="${api.adwords.developerToken}"/>
    <property name="API_ADWORDS_CLIENT_CUSTOMER_ID" value="${api.adwords.clientCustomerId}"/>
    <property name="API_ADWORDS_USER_AGENT" value="${api.adwords.userAgent}"/>
  </system-properties>
</appengine-web-app>
