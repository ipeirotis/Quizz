<?xml version="1.0" encoding="UTF-8"?>
<cronentries>
  <cron>
    <url>/api/updateAllQuestionStatistics</url>
    <description>Update the gold, silver, user counts for all questions</description>
    <schedule>every 720 minutes</schedule>
    <target>quizz-tasks</target>
  </cron>
    <cron>
    <url>/api/updateAllUserStatistics</url>
    <description>Update QuizPerformance statistics for all users</description>
    <schedule>every 720 minutes</schedule>
    <target>quizz-tasks</target>
  </cron>
  <cron>
    <url>/api/updateCountStatistics</url>
    <description>Update the counters that display number of questions, answers, etc in the admin interface</description>
    <schedule>every 5 minutes</schedule>
    <target>quizz-tasks</target>
  </cron>
  <cron>
    <url>/api/cacheQuizQuestions</url>
    <description>Cache the 10 questions that will be asked for each quiz in memcache, so that the quiz starts quickly</description>
    <schedule>every 5 minutes</schedule>
    <target>quizz-tasks</target>
  </cron>
  <cron>
    <url>/api/cacheSurvivalProbability?sched=true</url>
    <description>Cache SurvivalProbability</description>
    <schedule>every day 00:00</schedule>
    <target>quizz-tasks</target>
  </cron>
  <cron>
    <url>/api/updateAnswerCountsStatistics?all=true</url>
    <description>Update answers statistics</description>
    <schedule>every day 00:30</schedule>
    <target>quizz-tasks</target>
  </cron>
  <cron>
    <url>/api/updateAnswerBitsStatistics?all=true</url>
    <description>Update answers statistics</description>
    <schedule>every day 01:00</schedule>
    <target>quizz-tasks</target>
  </cron>
</cronentries>